[module/update]
type = custom/script

interval = 600
format =  <label>
label = %output%
#format-underline = ${colors.foreground}

format-foreground = ${colors.foreground-alt}
label-foreground = ${colors.foreground}
exec = checkupdates 2> /dev/null | wc -l

click-left=launch_kitty fish -c update

[module/installed]
type = custom/script

interval = 600
format =  <label>
label = %output% 
#format-underline = ${colors.foreground}

format-foreground = ${colors.foreground-alt}
label-foreground = ${colors.foreground}
exec = yay -Qq | wc -l 

[module/weather]
type = custom/script
exec = cat /tmp/weather

click-left=xdg-open 'https://www.google.com/search?q=weather' &

interval=600

format = <label>
label = %output%
format-foreground = ${colors.foreground-alt}
label-foreground = ${colors.foreground}
#format-underline = ${colors.foreground}

