[alias]
  logl = log --oneline --decorate --graph
  make-new-repo = filter-branch --prune-empty --subdirectory-filter # [subdir] -- [REF]
  pristine = clean -ffxd
  pushall = !git remote | xargs -L1 git push --all
  retrack = !git rm -r --cached . && git add .
  rclone = clone --recurse-submodules

[branch]
  sort = -committerdate

[column]
  ui = auto

[commit]
  gpgSign = true
  verbose = true

[core]
  excludesfile = ~/.config/git/ignore

[credential]
  helper = /usr/lib/git-core/git-credential-libsecret

[diff]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true

[diff "bin"]
  textconv = hexdump -v -C

[fetch]
  all = true
  prune = true
  pruneTags = true

[help]
  autocorrect = prompt

[merge]
  conflictstyle = zdiff3

[pull]
  rebase = merges

[push]
  autoSetupRemote = true
  default = simple
  followTags = true

[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true

[rerere]
  autoupdate = true
  enabled = true

[submodule]
  recurse = true

[tag]
  sort = version:refname

[url "https://github.com/yoangau/"]
  insteadOf = me:

[user]
  email = yoangau@gmail.com
  name = Yoan Gauthier
